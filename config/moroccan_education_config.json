  "quality_checks": {
    "required_fields": {
      "level": ["id", "name", "name_ar", "subjects_count", "courses_count"],
      "subject": ["id", "name", "name_ar", "level_id", "courses_count"],
      "content": ["id", "title", "content_type", "subject_id", "level_id"]
    },
    "validation_rules": {
      "min_subjects_per_level": 3,
      "min_courses_per_subject": 1,
      "max_empty_descriptions": 0.3,
      "min_confidence_score": 0.7
    }
  },
  "output_format": {
    "json_structure": {
      "source": "public_website",
      "country": "morocco",
      "collection_date": "ISO_timestamp",
      "levels": [],
      "subjects": [],
      "courses": [],
      "exercises": [],
      "controls": [],
      "exams": [],
      "corrections": [],
      "metadata": {
        "total_items": "number",
        "languages": ["fr", "ar"],
        "quality_score": "float",
        "collection_stats": {}
      }
    },
    "csv_exports": [
      "levels.csv",
      "subjects.csv", 
      "courses.csv",
      "exercises.csv",
      "controls.csv",
      "exams.csv",
