{
  "api": {
    "name": "Moroccan Education API",
    "version": "1.0.0",
    "description": "Comprehensive API for Moroccan education data",
    "contact_email": "prs.online.00@gmail.com",
    "github": "https://github.com/K11E3R/moroccan-education-API"
  },
  "data_sources": [
    {
      "name": "AlloSchool",
      "url": "https://www.alloschool.com",
      "description": "Moroccan educational platform"
    },
    {
      "name": "9rayti",
      "url": "https://9rayti.com",
      "description": "Education resources portal"
    },
    {
      "name": "Dyrassa",
      "url": "https://www.dyrassa.com",
      "description": "Educational content platform"
    }
  ],
  "scraping_config": {
    "respect_robots": true,
    "delay_between_requests": 2.0,
    "max_concurrent_requests": 5,
    "timeout": 30,
    "user_agent": "MoroccanEducationBot/1.0 (Educational Research)"
  },
  "education_structure": {
    "categories": ["primaire", "college", "lycee"],
    "levels_per_category": {
      "primaire": 6,
      "college": 3,
      "lycee": 3
    },
    "content_types": [
      "cours",
      "exercice",
      "examen",
      "controle",
      "correction",
      "resume"
    ],
    "languages": ["fr", "ar"]
  },
  "quality_checks": {
    "min_title_length": 5,
    "required_fields": ["id", "title", "level_id", "subject_id", "content_type"],
    "min_content_per_subject": 3
  }
}
