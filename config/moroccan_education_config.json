    "title": "h1, .title, .page-title, .content-title",
    "description": ".description, .content, .summary, .excerpt",
    "level": ".level, .niveau, .grade, .class",
    "subject": ".subject, .matiere, .discipline, .course",
    "breadcrumb": ".breadcrumb, .navigation, .path",
    "content_body": ".content-body, .main-content, .article-content"
  },
  "url_patterns": {
