    "courses": [
      "/cours/",
      "/lesson/",
      "/lecon/"
    ],
    "exercises": [
      "/exercice/",
      "/exercise/",
      "/pratique/"
    ],
    "controls": [
      "/controle/",
      "/control/",
      "/test/"
    ],
    "exams": [
      "/examen/",
      "/exam/",
      "/evaluation/"
    ],
    "corrections": [
      "/correction/",
      "/solution/",
      "/reponse/"
    ]
  },
